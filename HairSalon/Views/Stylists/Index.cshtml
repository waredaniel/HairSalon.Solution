@{
  Layout = "_Layout";
}

@using HairSalon.Models;

<h1>STYLISTS</h1>
<hr />
<div class="card">

@if (Model.Count == 0)
{
  <h3>Your stylists will appear here after being added</h3>
}

<ul>
  @foreach (Stylist stylist in Model)
  {
    <li>@Html.ActionLink($"{stylist.StylistName}", "Details", new { id = stylist.StylistId })</li>
  }
</ul>

</div>
<hr />
