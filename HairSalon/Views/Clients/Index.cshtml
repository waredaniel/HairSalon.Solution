@{
  Layout = "_Layout";
}

@using HairSalon.Models;
@model List<HairSalon.Models.Client>;

<h1>Clients</h1>
<hr />
<div class="card">

@if (@Model.Count == 0)
{
  <h3>No clients have been added!</h3>
}

@foreach (Client client in Model)
{
  <li>@Html.ActionLink($"{client.ClientName}", "Details", new { id = client.ClientId })</li>
}
</div>
<hr />
<p>@Html.ActionLink("Add Client", "Create")</p>
<p>@Html.ActionLink("Add Stylist", "Create")</p>