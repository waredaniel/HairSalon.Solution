@{
  Layout = "_Layout";
}

@model HairSalon.Models.Client

<h1>EDIT Client |  @Html.DisplayFor(model => model.ClientName)</h1>
<hr />
@using (Html.BeginForm())
{
  @Html.HiddenFor(model => model.ClientId)

  <span> | </span> @Html.LabelFor(model => model.ClientName) <span> | </span> 
  @Html.TextBoxFor(model => model.ClientName) <span> | </span> 

  @Html.LabelFor(model => model.ClientDesc) <span> | </span> 
  @Html.EditorFor(model => model.ClientDesc) <span> | </span> 

  @Html.LabelFor(model => model.Stylist) <span> | </span> 
  @Html.DropDownList("StylistId") <span> | </span> 
<hr />
  <input type="submit" value="Save" />
}

<p>@Html.ActionLink("Back to Clients", "Index")</p>